<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Polymon</title>

    <link rel="icon" type="image/png" sizes="192x192" href="favicon/android-chrome-192x192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="favicon/android-chrome-512x512.png">
    <link rel="apple-touch-icon" sizes="180x180" href="favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png">
    <link rel="manifest" href="favicon/site.webmanifest">

    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/phaser/3.55.2/phaser.min.js" as="script">
    <link rel="stylesheet" href="index.css">
</head>

<body>

  <div id="input-box" style="display: none">
    <h3>CryptoMon</h3>
    <br />
    <br />
    <div id="second-window">
      <button class="login second">Login</button>
      <br />
      <br />
      <br />
      <span>or</span>
      <br />
      <br />
      <button class="signup second rainbow">Sign-Up</button>
    </div>

    <div id="login-form" style="display: none">

      <form action="/login" method="post">
        <label>Email</label>
        <input type="email" name="email" placeholder="Red@CryptoMon.Com">
        <label>Password</label>
        <input type="password" name="password" placeholder="1234Cats!">
        <button type="submit" class="login second">Login</button>
        <br />
      </form>

    </div>

    <div id="signup-form" style="display: none">

      <form action="/signup" method="post">
        <label>Email</label>
        <input type="email" name="email" placeholder="Red@CryptoMon.Com">
        <label>Password</label>
        <input type="password" name="password" placeholder="1234Cats!">
        <button class="rainbow" type="submit">Sign-Up</button>
        <br />
      </form>

    </div>

  </div>

  <div id="phaser-example">

  </div>
</body>


<script charset="utf-8">
document.querySelector("body").style.backgroundColor = `black`
//dislays random loading image
function rescale(){
let desktopImages = ["/images/Load/background3.gif","/images/Load/background1.webp","/images/Load/background2.webp"]
let mobileImages = ["/images/Load/background4.gif","/images/Load/background5.gif","/images/Load/background6.gif","/images/Load/background7.gif"]
let loader = window.innerWidth<window.innerHeight ? mobileImages : desktopImages
loader = loader.sort((a,b)=>Math.random()-0.5)[0]
document.querySelector("body").style.backgroundImage = `url(${loader})`
}
window.addEventListener("resize",rescale)
rescale()
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/phaser/3.55.2/phaser.min.js"></script>
<script src="/index.js"></script>

</html>
